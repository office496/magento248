<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <!-- 1) after.body.start este CONTAINER -->
        <referenceContainer name="after.body.start">
            <!-- Bonus fix: target core messages block corect 'global.notices' -->
            <block name="header-notification"
                   template="Magento_Theme::html/header/notification.phtml"
                   before="-"/>
        </referenceContainer>

        <!-- Header content lăsat neschimbat -->
        <referenceBlock name="header-content">
            <arguments>
                <argument name="show_compare" xsi:type="boolean">true</argument>
                <argument name="show_wishlist" xsi:type="boolean">true</argument>
                <argument name="show_language" xsi:type="boolean">true</argument>
            </arguments>

            <block name="header.compare" as="compare" template="Magento_Theme::html/header/compare.phtml"/>

            <block
                name="topmenu_mobile_wrapper"
                as="mobilemenu"
                template="Magento_Theme::html/header/mobilemenu.phtml"
                ttl="3600"
            >
                <arguments>
                    <argument name="cache_lifetime" xsi:type="string">3600</argument>
                </arguments>
            </block>
        </referenceBlock>

        <!-- INSERȚIE CERUTĂ: cart-drawer + qtybox (imediat după header-content) -->
        <referenceBlock name="cart-drawer">
            <arguments>
                <argument name="show_sku" xsi:type="boolean">true</argument>
                <!-- stilul câmpului cantitate în mini-cart: text | input | select | incrementor -->
                <argument name="qty_style" xsi:type="string">input</argument>
            </arguments>
            <block name="cart-drawer.qtybox" template="Magento_Theme::html/cart/qtybox.phtml"/>
        </referenceBlock>

        <move element="topmenu_mobile" destination="topmenu_mobile_wrapper"/>

        <!-- 2) top.container este CONTAINER -->
        <referenceContainer name="top.container">
            <block name="header-usps" template="Magento_Theme::html/header/usps.phtml" before="-"/>
        </referenceContainer>

        <!-- 3) Footer content + grid wrapper -->
        <referenceBlock name="footer-content">
            <!-- Wrapper pe grid care conține cele 4 coloane + payment -->
            <block name="footer-grid-wrapper" template="Magento_Theme::html/footer/grid-wrapper.phtml">
                <!-- Coloana 1: Shop -->
                <block name="footer_column_1" template="Magento_Theme::html/footer/collapse.phtml">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Shop</argument>
                        <argument name="open" xsi:type="boolean">true</argument>
                    </arguments>
                </block>

                <!-- (Mutat după definirea footer_column_1, ca să evităm broken reference) -->
                <move element="footer-static-links" destination="footer_column_1"/>

                <!-- Coloana 2: Customer Service -->
                <block name="footer_column_2" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_1">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Customer Service</argument>
                    </arguments>
                    <block name="footer-static-links-services" template="Magento_Theme::html/footer/links-services.phtml"/>
                </block>

                <!-- Coloana 3: Our Company -->
                <block name="footer_column_3" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_2">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Our Company</argument>
                    </arguments>
                    <block name="footer-static-links-company" template="Magento_Theme::html/footer/links-company.phtml"/>
                </block>

                <!-- Coloana 4: My Account -->
                <block name="footer_column_4" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_3">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">My Account</argument>
                    </arguments>
                    <block name="footer_menu_4" template="Magento_Theme::html/footer/menu-account.phtml"/>
                </block>

                <!-- Bara cu metode de plată -->
                <block name="footer-payment" template="Magento_Theme::html/footer/payment.phtml" after="footer_column_4"/>
            </block>
        </referenceBlock>

        <!-- CTA sus și USP jos în cadrul footer-ului -->
        <referenceContainer name="footer">
            <block name="itiles.footer.cta" template="Magento_Theme::html/footer/cta.phtml" before="footer-content"/>
            <block name="itiles.footer.usps" template="Magento_Theme::html/footer/usps.phtml" after="footer-content"/>
        </referenceContainer>

        <!-- Inserție: Alpine plugins (ordine: htmldialog -> ajax-cart) -->
        <referenceBlock name="script-alpine-js">
            <block name="alpine-plugin-htmldialog"
                   template="Magento_Theme::page/js/plugins/htmldialog.phtml"/>
            <block name="alpine-plugin-ajax-cart"
                   template="Magento_Theme::page/js/plugins/ajax-cart.phtml">
                <arguments>
                    <argument name="delay" xsi:type="number">500</argument>
                    <argument name="show_sku" xsi:type="boolean">true</argument>
                    <argument name="display_on_success" xsi:type="string">modal</argument>
                    <!-- modal|minicart|false -->
                    <argument name="form_selectors" xsi:type="string">#product_addtocart_form, .product_addtocart_form</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>


